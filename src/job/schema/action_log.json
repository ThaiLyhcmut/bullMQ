{
  "actions_log": {
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "action": { 
          "type": "string", 
          "enum": ["retry", "remove", "pause", "resume", "clean"],
          "description": "Loại hành động"
        },
        "queueName": { "type": "string", "description": "Tên queue liên quan" },
        "jobId": { "type": "string", "description": "ID của job (nếu có)" },
        "performedBy": { "type": "string", "description": "Người thực hiện (admin ID hoặc username)" },
        "timestamp": { "type": "string", "format": "date-time", "description": "Thời gian thực hiện" },
        "details": { "type": "object", "description": "Thông tin chi tiết về hành động" }
      },
      "required": ["action", "queueName", "performedBy", "timestamp"],
      "indexes": [
        { "key": { "queueName": 1, "timestamp": 1 } }
      ]
    }
  }
}